USE="${USE} logrotate"

# Hardware
USE="${USE} 3dnow 3dnowext aes avx mmx mmxext popcnt sse sse2 sse3 sse4_1 sse4_2 sse4a ssse3"

CPU_FLAGS_X86="3dnow 3dnowext aes avx mmx mmxext popcnt sse sse2 sse3 sse4_1 sse4_2 sse4a ssse3"
