post_pkg_preinst() {
	# if xorg configured to ati-drivers and ati-drivers was unmered
	if grep fglrx /etc/X11/xorg.conf &>/dev/null && [ -f /var/db/pkg/x11-drivers/ati-drivers-* ]
	then
		/usr/sbin/cl-core --method setup_video --video radeon
	fi
}
