# Calculate comment=# path=/usr/bin chmod=0755
#!/bin/bash
# Unpack portage and overlay from git

if git status --short | grep -m1 "^ D " &>/dev/null
then
	# unpack portage
	cd /usr/portage
	git checkout .
	# unpack overlay
	cd /var/lib/layman/calculate
	git checkout .
	# copy metadata
	emerge --metadata
fi
