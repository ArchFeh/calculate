post_pkg_prerm() {
	if [[ "${CATEGORY}/${PN}" == "x11-drivers/ati-drivers" ]] &&
	   [[ "$(/usr/libexec/calculate/cl-variable --value main.os_x11_video_drv)" == "fglrx" ]]
	then
		/usr/sbin/cl-core --method setup_video --video radeon
	fi
}
