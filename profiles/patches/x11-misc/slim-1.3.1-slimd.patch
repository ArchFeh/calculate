+stopslim() {
+	# force kill X 
+	killall X &>/dev/null
+	# and kill slim, because slim may be hanged
+	killall -9 slim &>/dev/null
+	# removing slim lock file
+	rm -f /var/run/slim.lock
+	exit
+}
+
+workloop() {
+	trap stopslim TERM
+	# waiting TERM signal for killing X and slim
+	while true
+	do
+		sleep 10
+	done
+}
+
+rm -f /var/run/slim.lock
+killall -9 slim &>/dev/null
+/usr/bin/slim
+workloop &
